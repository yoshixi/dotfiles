{
  "eslint.autoFix": false,
  "eslint.autoFixOnSave": false,
  "eslint.filetypes": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "vue"
  ],
  "coc.preferences.formatOnSaveFiletypes": [
    "html",
    "css",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "vue",
    "ruby",
    "go",
    "rust"
  ],
  "deno.lint": true,
  "prettier.disableLanguages": ["typescript"],
  "typescript.format.enabled": false,
  "codeLens.enable": true,
  "rust-analyzer.checkOnSave.command": "clippy",
  "rust-analyzer.updates.channel": "stable",
  "rust-analyzer.procMacro.enable": true,
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"]
    },
    "graphql": {
      "command": "graphql-lsp",
      "args": ["server", "-m", "stream"],
      "filetypes": ["typescript", "typescriptreact", "graphql", "vue"]
    }
  }
}
